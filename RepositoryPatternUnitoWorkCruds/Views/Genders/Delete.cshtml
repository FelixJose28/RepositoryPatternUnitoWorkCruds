@model Genero
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<form class="mt-3" asp-action="DeletePost" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="row">
        <div class="form-group col-7 ">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-7">
            <a class="btn btn-success mx-2" style="width:40%" asp-action="Index">Volver atras</a>
            <button  class="btn btn-danger mx-2" style="width:40%" type="submit">Borrar</button>
        </div>
    </div>
</form>

