@model Genero
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>
<form class="mt-3" asp-action="EditPost" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="row">
        <div class="form-group col-7 ">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-7">
            <a asp-action="Index" class="btn btn-success mx-2" style="width:40%">Volver atras</a>
            <button class="btn btn-info mx-2" style="width:40%" type="submit">Editar</button>
        </div>
    </div>
</form>

