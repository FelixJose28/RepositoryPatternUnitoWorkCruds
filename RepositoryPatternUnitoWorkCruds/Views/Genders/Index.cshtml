@model IEnumerable<Genero>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success float-right w-25" asp-action="Create">Agregar genero</a>
@if (Model.Count() > 0)
{


    <h1 class="mt-2">Generos listados</h1>
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Nombre del genero</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genero in Model)
            {
                <tr>
                    <td>@genero.Name</td>
                    <td>
                        <a asp-route-id="@genero.Id" asp-action="Edit" class="btn btn-warning mr-3">Editar</a>
                        <a asp-route-id="@genero.Id" asp-action="Delete" class="btn btn-danger ml-3">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h1 class="text-danger mt-4">No hay generos listados</h1>
}

