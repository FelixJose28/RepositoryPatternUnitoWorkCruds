@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-success float-right w-25" asp-action="Create">Agregar pelicula</a> 
@if(Model.Count()>0){


<h1 class="mt-4">Peliculas listadas</h1>
<table class="table table-striped mt-2">
    <thead>
        <tr>
            <th>p</th>
            <th>p</th>
            <th>p</th>
            <th>p</th>
            <th>p</th>
            <th>p</th>
            <th>p</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Id</td>
            <td>@movie.Title</td>
            <td>@movie.Language</td>
            <td>@movie.ReleaseDate</td>
            <td>@movie.Director</td>
            <td>@movie.Genero</td>
            <td>@movie.Rating</td>
        </tr>
        }
    </tbody>
</table>

} else {
    <h1 class="text-danger mt-4">No hay peliculas listadas</h1>
}